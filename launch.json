{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Xdebug com Laravel Sail",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "hostname": "0.0.0.0",
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}"
            }
        }
    ]
}

// Observação: para funcionar é necessário incluir a seguinte configuração no arquivo .ini
SAIL_XDEBUG_MODE=debug

// Também é necessário uma das ações adicionais
// Ou usar a url http://localhost/?XDEBUG_TRIGGER
// Ou instalar a extensão 'Xdebug helper' para o navegador e ativar o modo Debug

